# ==============================
# Event Store データベース設定
# ==============================
EVENT_STORE_HOST=localhost
EVENT_STORE_PORT=5432
EVENT_STORE_DATABASE=elixir_cqrs_event_store_dev
EVENT_STORE_USER=postgres
EVENT_STORE_PASSWORD=postgres
# 本番環境では DATABASE_URL 形式を使用
# EVENT_STORE_DATABASE_URL=ecto://postgres:password@localhost/event_store

# ==============================
# Command Service データベース設定
# ==============================
COMMAND_DB_HOST=localhost
COMMAND_DB_PORT=5433
COMMAND_DATABASE=elixir_cqrs_command_dev
COMMAND_DB_USER=postgres
COMMAND_DB_PASSWORD=postgres
# 本番環境では DATABASE_URL 形式を使用
# COMMAND_DATABASE_URL=ecto://postgres:password@localhost/command_db

# ==============================
# Query Service データベース設定
# ==============================
QUERY_DB_HOST=localhost
QUERY_DB_PORT=5434
QUERY_DATABASE=elixir_cqrs_query_dev
QUERY_DB_USER=postgres
QUERY_DB_PASSWORD=postgres
# 本番環境では DATABASE_URL 形式を使用
# QUERY_DATABASE_URL=ecto://postgres:password@localhost/query_db

# ==============================
# アプリケーション設定
# ==============================
MIX_ENV=dev
PORT=4000
PHX_HOST=localhost

# 秘密鍵（本番環境では必ず変更してください）
# mix phx.gen.secret で生成可能
SECRET_KEY_BASE=dev-secret-key-base-must-be-at-least-64-characters-long-replace-in-production
ENCRYPTION_KEY=dev-encryption-key-32-characters

# ==============================
# Phoenix PubSub 設定
# ==============================
# ノード名設定（分散実行時に使用）
NODE_NAME=client@127.0.0.1
NODE_COOKIE=elixir_cqrs_secret

# ==============================
# 監視・オブザーバビリティ設定
# ==============================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=elixir-cqrs
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=development

# ==============================
# データベース接続プール設定
# ==============================
POOL_SIZE=10

# ==============================
# ログ設定
# ==============================
LOG_LEVEL=debug

# ==============================
# 開発環境用の設定
# ==============================
# ホットリロード
PHX_SERVER=true

# ==============================
# Kubernetes/本番環境用の追加設定
# ==============================
# RELEASE_NAME=elixir_cqrs
# RELEASE_NODE=elixir_cqrs@service
# RELEASE_COOKIE=secure-cookie-here
# REPLACE_OS_VARS=true
